<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Beyonce"
    tools:layout_editor_absoluteY="81dp">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@color/design_default_color_primary"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DogDescription"
        app:menu="@menu/bottom_nav" />

    <ImageView
        android:id="@+id/Beyonce_Pic"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/dog1_contentDesc"
        app:layout_constraintBottom_toTopOf="@+id/ReserveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog1image" />

    <TextView
        android:id="@+id/DogDescription"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="82dp"
        android:fontFamily="casual"
        android:text="@string/dog1_contentDesc"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:translationZ="1dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beyonce_name" />

    <ImageView
        android:id="@+id/rounded_square_bg2"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:alpha=".5"
        android:contentDescription="@string/rounded_square_bg"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/Beyonce_Pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rounded_square_img" />

    <ImageButton
        android:id="@+id/ReserveButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:contentDescription="@string/reservations"
        android:onClick="passInfoToReservationActivity"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FavoriteButton"
        app:layout_constraintTop_toBottomOf="@+id/Beyonce_Pic"
        app:srcCompat="@drawable/ic_reservation" />

    <ImageButton
        android:id="@+id/FavoriteButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="9dp"
        android:background="@color/white"
        android:contentDescription="@string/favorites"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/ReserveButton"
        app:layout_constraintEnd_toStartOf="@+id/ReserveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ReserveButton"
        app:srcCompat="@drawable/ic_favorites" />

    <TextView
        android:id="@+id/beyonce_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="249dp"
        android:fontFamily="casual"
        android:text="@string/dog1name"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/DogDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>