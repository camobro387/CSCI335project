<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:elevation="0dp"
    card_view:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_square_img"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/res_dog_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/dog1_contentDesc"
            android:src="@drawable/dog1image"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/res_dog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/dogDesc"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            card_view:layout_constraintStart_toEndOf="@+id/res_dog_img"
            card_view:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cancel_res"
            style="@android:style/Widget.Material.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/del_reserve"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/res_date"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/res_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="@string/res_desc"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp"
            card_view:layout_constraintStart_toStartOf="@+id/res_dog_name"
            card_view:layout_constraintTop_toBottomOf="@+id/res_dog_name" />

        <TextView
            android:id="@+id/res_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/dogDesc"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:textSize="18sp"
            card_view:layout_constraintStart_toStartOf="@+id/res_desc"
            card_view:layout_constraintTop_toBottomOf="@+id/res_desc" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>