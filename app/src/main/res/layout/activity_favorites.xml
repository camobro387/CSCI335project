<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/colorPrimary"
    tools:context=".Favorites">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@color/design_default_color_primary"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav">

    </android.support.design.widget.BottomNavigationView>

    <ImageButton
        android:id="@+id/kanye_button"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/dog4_contentDesc"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog4image" />

    <ImageButton
        android:id="@+id/selena_button"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/dog5_contentDesc"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kanye_button"
        app:srcCompat="@drawable/dog5image" />

    <TextView
        android:id="@+id/DogDescription"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:text="@string/dog4_contentDesc"
        app:layout_constraintBottom_toBottomOf="@+id/kanye_button"
        app:layout_constraintEnd_toEndOf="@+id/kanye_button"
        app:layout_constraintTop_toTopOf="@+id/kanye_button"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/DogDescription2"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:text="@string/dog5_contentDesc"
        app:layout_constraintBottom_toBottomOf="@+id/selena_button"
        app:layout_constraintEnd_toEndOf="@+id/selena_button"
        app:layout_constraintTop_toTopOf="@+id/selena_button"
        app:layout_constraintVertical_bias="0.428" />



</android.support.constraint.ConstraintLayout>



